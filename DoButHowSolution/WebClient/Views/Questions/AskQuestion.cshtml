@model QuestionViewModel
@{
    ViewData["Title"] = "What do you want to know?";
}
<h2>Enter you question</h2>
<form asp-controller="Questions" asp-action="AskQuestion" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal">
    <div class="form-group">
        <label asp-for="Title" class="control-label col-sm-2">Title:</label>
        <div class="col-sm-10">
            <input asp-for="Title" type="text" class="form-control">
        </div>
    </div>
    <div class="form-group">
        <label asp-for="QuestionCategoryId" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <select asp-for="QuestionCategoryId" asp-items="@Model.QuestionCategories"></select>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label col-sm-2">Description:</label>
        <div class="col-sm-10">
            <textarea asp-for="Description" class="form-control" rows="5"></textarea>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default">Send</button>
        </div>
    </div>
    @if (!string.IsNullOrEmpty(ViewBag.message))
    {
        <p>@ViewBag.message</p>
    }
</form>